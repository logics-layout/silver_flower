extends main

block head
    - var headData = {title: "Оформление заказа"}

    link(href="%=static=%css/separate-css/slick.css", rel="stylesheet", type="text/css")

block content
    .row
        .col-lg-8
            .collapse.not-styleLink
                .collapse__item.active.open
                    a(href="#").collapse__item-head
                        .collapse__item-head-table
                            span
                                span.collapse__item-head-num 1
                            span.collapse__item-head-title Регион доставки
                    .collapse__item-content
                        p.text-big: b Тип плательщика
                        .row
                            .col-xl-3.col-lg-4.col-md-3.col-sm-5.col-xs-12
                                +style-input('Физическое лицо', 'radio')
                            .col-md-4.col-sm-5.col-xs-12
                                +style-input('Юридическое лицо', 'radio')

                        br
                        .row
                            .col-xl-5.col-lg-4.col-xs-12.col-sm-6
                                .form-group
                                    label.text-big: b Населённый пункт
                                    input(placeholder="Москва, Центр, Россия").form-control
                            .col-xl-4.col-lg-4.col-xs-12.col-sm-6
                                .form-group
                                    label.text-big: b Индекс
                                    input(placeholder="1011000").form-control
                            .col-xl-3.col-lg-4.col-xs-12
                                .form-group
                                    label.text-big.hidden-md-down: b &nbsp;
                                    button.btn.btn-green.btn-width.ttu.btn-input Следующий шаг





                .collapse__item
                    a(href="#").collapse__item-head
                        .collapse__item-head-table
                            span
                                span.collapse__item-head-num 2
                            span.collapse__item-head-title Доставка
                    .collapse__item-content
                        span Привет!
                .collapse__item
                    a(href="#").collapse__item-head
                        .collapse__item-head-table
                            span
                                span.collapse__item-head-num 3
                            span.collapse__item-head-title Оплата
                    .collapse__item-content
                        span Привет!
                .collapse__item
                    a(href="#").collapse__item-head
                        .collapse__item-head-table
                            span
                                span.collapse__item-head-num 4
                            span.collapse__item-head-title Покупатель
                    .collapse__item-content
                        span Привет!
                .collapse__item
                    a(href="#").collapse__item-head
                        .collapse__item-head-table
                            span
                                span.collapse__item-head-num 5
                            span.collapse__item-head-title Товары в заказе
                    .collapse__item-content
                        span Привет!
        .col-lg-4
            br.hidden-lg-up
            .cart-result-data
                .cart-result-data-table
                    .cart-result-data-table-row
                        .cart-result-data-table-cell.color-blackThree Товаров на:
                        .cart-result-data-table-cell.text-right.color-blackThree 12 280 р.
                    .cart-result-data-table-row
                        .cart-result-data-table-cell Общий вес:
                        .cart-result-data-table-cell.text-right 5 кг
                    .cart-result-data-table-row
                        .cart-result-data-table-cell Доставка:
                        .cart-result-data-table-cell.text-right 800 р.
                    .cart-result-data-table-row
                        .cart-result-data-table-cell.cart-result-data-table-cell_paddingTop: span.cart-result-data__textBig Итого:
                        .cart-result-data-table-cell.cart-result-data-table-cell_paddingTop.text-right: span.cart-result-data__price 12 280 р.






block script
    script(src="%=static=%js/separate-js/slick.min.js" type="text/javascript")
    script(src="%=static=%js/separate-js/jquery.magnific-popup.min.js" type="text/javascript")




































